<?xml version="1.0" encoding="utf-8"?>
<layout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <estyle.teabaike.widget.BannerViewOld
            android:id="@+id/banner_view_old"
            android:layout_width="match_parent"
            android:layout_height="@dimen/headline_height" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/headline_titlebar_height"
            android:layout_gravity="bottom"
            android:background="@color/headline_titlebar_bg">

            <TextView
                android:id="@+id/headline_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:textColor="@android:color/white" />

            <estyle.teabaike.widget.DotsView
                android:id="@+id/dots_view"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dot_size"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                app:dotMargin="@dimen/activity_horizontal_margin" />
        </RelativeLayout>
    </FrameLayout>
</layout>